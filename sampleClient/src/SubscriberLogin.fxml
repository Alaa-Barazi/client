<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<GridPane xmlns:fx="http://javafx.com/fxml"
	fx:controller="LoginController" hgap="10" vgap="10"
	alignment="CENTER">
	<padding>
		<Insets top="20" right="20" bottom="20" left="20" />
	</padding>

	<Label text="Username:" GridPane.rowIndex="0"
		GridPane.columnIndex="0" />
	<TextField fx:id="usernameField" GridPane.rowIndex="0"
		GridPane.columnIndex="1" />

	<Label text="Password:" GridPane.rowIndex="1"
		GridPane.columnIndex="0" />
	<PasswordField fx:id="passwordField"
		GridPane.rowIndex="1" GridPane.columnIndex="1" />


	<Label text="Password:" GridPane.rowIndex="1"
		GridPane.columnIndex="0" />

	<!-- Stack the hidden and visible fields on top of each other -->
	<StackPane GridPane.rowIndex="1" GridPane.columnIndex="1">
		<PasswordField fx:id="passwordField" />
		<TextField fx:id="visiblePasswordField" visible="false"
			managed="false" />
	</StackPane>

	<!-- Eye toggle button -->
	<Button fx:id="toggleEye" onAction="#togglePasswordVisibility"
		GridPane.rowIndex="1" GridPane.columnIndex="2"
		style="-fx-background-color: transparent;">
		<graphic>
			<ImageView fx:id="eyeIcon" fitHeight="16" fitWidth="16" />
		</graphic>
	</Button>

	<Button text="Login" onAction="#handleLogin"
		GridPane.rowIndex="2" GridPane.columnIndex="1" />
</GridPane>
